<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.B1AppBuilder" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Action bar -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Other -->
        <item name="android:fitsSystemWindows">true</item>
    </style>
    
    <!-- Action bar style -->
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>
    
    <!-- Action bar title style -->
    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Button styles -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Text input styles -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
